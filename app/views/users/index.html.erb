<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our users</h1>
    </div>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <div class="user-card">
          <div class="user-card-content">
            <div class="user-card-title">
          <%= cl_image_tag user.photo.key, height: 300, width: 400, crop: :fill %>
              <h4><%= user.nickname %></h4>
            </div>
            <p><%= user.preferred_date_ideas %></p>
            <div class="user-card-actions">
            <a class="btn btn-flat" href="#">Poke</a>
            <div class="fairy-card-actions">
            <%= link_to "View", user_path(user) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
